<Window x:Class="PM04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PM04"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:s="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <GroupBox Header="Имя">
                <TextBox x:Name="NameField" TextChanged="OnTextFieldTextChanged"/>
            </GroupBox>
            <GroupBox Header="Фамилия">
                <TextBox x:Name="SurnameField" TextChanged="OnTextFieldTextChanged"/>
            </GroupBox>
            <GroupBox Header="Возраст">
                <TextBox x:Name="AgeField" TextChanged="OnTextFieldTextChanged"/>
            </GroupBox>
            <GroupBox Header="Дата Рождения">
                <xctk:MaskedTextBox x:Name="BirthDateField" Mask="00.00.0000" TextChanged="OnTextFieldTextChanged"/>
            </GroupBox>
        </StackPanel> 
    </Grid>
</Window>
